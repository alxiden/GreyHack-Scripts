if active_user != "root" then exit("Run as root.")

cryptools = include_lib("/lib/crypto.so")

pc = get_shell

computer = pc.host_computer()
folders = computer.File("/")

if folders then
	all_folders = folders.get_folders()
	for folder in all_folders
		ransome = cryptools.encrypt("/"+folder.name, "GotYa")
	end for
end if
